@model IEnumerable<WebLOU.Event>

@{
    ViewBag.Title = "Index";
}


<div id="tileLayout">
    @foreach (var item in Model)
    {
        <div class="event-thumb">
            <div class="event-thumb-image">
                <img src="../img/@Html.DisplayFor(modelItem => item.Background)">
                <div class="quickview-title">Quick View</div>
            </div>
            <div class="event-thumb-title">
                <h3 id="date">@Html.DisplayFor(modelItem => item.Start_Date, "{0:dd/MM/yyyy}", new { @class = "form-control" })</h3>
                <h5>@Html.DisplayFor(modelItem => item.Event_Name)</h5>
                <h5>@Html.DisplayFor(modelItem => item.Venue)</h5>
            </div>
        </div>
        <div class="event-view">
            <div class="close-btn">X</div>
            <div class="event-big-image">
                <img src="">
            </div>
            <div class="event-big-desc">
                <h5 class="event-title">@Html.DisplayFor(modelItem => item.Event_Name)</h5>
                <h5 class="text-dark">@Html.DisplayFor(modelItem => item.Venue)</h5>
                <p class="text-dark"><b>Date:</b> @Html.DisplayFor(modelItem => item.Start_Date)</p>
                <p class="text-dark"><b>Start Time: </b> @Html.DisplayFor(modelItem => item.Start_Time)</p>
                <p class="text-dark"><b>End Date: </b>@Html.DisplayFor(modelItem => item.End_Date)</p>
                <p class="text-dark"><b>End Time: </b>@Html.DisplayFor(modelItem => item.End_Time)</p>
                <p class="text-dark"><b>Description: </b> <p>@Html.DisplayFor(modelItem => item.Description)</p></p>
                <p>   </p>
                <a href="@Html.DisplayFor(modelItem => item.Link)" target="_blank">For more info, click here.</a>
            </div>
        </div>
    }
</div>

<div id="tableLayout">
    <table id="event_table" class="table-warning text-danger table-striped">
        <thead>
            <tr id="names">
                <th class="event_heading heading bg-dark">
                    @Html.DisplayNameFor(model => model.Venue)
                </th>
                <th class="event_heading heading bg-dark">
                    @Html.DisplayNameFor(model => model.Event_Name)
                </th>
                <th class="event_heading heading bg-dark">
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th class="event_heading heading bg-dark">
                    @Html.DisplayNameFor(model => model.Start_Date)
                </th>
                <th class="event_heading heading bg-dark">
                    @Html.DisplayNameFor(model => model.Start_Time)
                </th>
                <th class="event_heading heading bg-dark">
                    @Html.DisplayNameFor(model => model.End_Date)
                </th>
                <th class="event_heading heading bg-dark">
                    @Html.DisplayNameFor(model => model.End_Time)
                </th>
                <th class="event_heading heading bg-dark">
                    @Html.DisplayNameFor(model => model.Link)
                </th>
                <th class="event_heading heading bg-dark">
                    @Html.DisplayNameFor(model => model.City)
                </th>

            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td class="text-dark">
                    @Html.DisplayFor(modelItem => item.Venue)
                </td>
                <td class="text-dark">
                    @Html.DisplayFor(modelItem => item.Event_Name)
                </td>
                <td class="text-dark">
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td class="text-dark">
                    @Html.DisplayFor(modelItem => item.Start_Date)
                </td>
                <td class="text-dark">
                    @Html.DisplayFor(modelItem => item.Start_Time)
                </td>
                <td class="text-dark">
                    @Html.DisplayFor(modelItem => item.End_Date)
                </td>
                <td class="text-dark">
                    @Html.DisplayFor(modelItem => item.End_Time)
                </td>
                <td class="text-dark">
                    @Html.DisplayFor(modelItem => item.Link)
                </td>
                <td class="text-dark">
                    @Html.DisplayFor(modelItem => item.City)
                </td>
            </tr>
        }
    </table>
</div>
<br>
<br>
<script src="~/Scripts/LOU.js" type="text/javascript"></script>